<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zunnorain.telcard_khokha.BankDetailsActivity.BankDeatailsActivity">

    <include layout="@layout/toolbar_layout"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/debitinputfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:counterEnabled="true"
        app:counterMaxLength="16"
        app:counterOverflowTextAppearance="@color/colorRed"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:inputType="phone"
            android:hint="Enter Mobile Number"
            android:textSize="23sp"
            android:maxLength="16"/>
    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/continue_button"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/button_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:textColor="@color/colorLightSkin"
        android:textSize="30dp"/>

</LinearLayout>
